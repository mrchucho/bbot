<h1>New comment</h1>

<%= error_messages_for :comment %>

<% form_for(:comment,:url => post_comments_path(@post)) do |f| %>
  <p>
    <b>Author</b><br />
    <%= f.text_field :author %>
  </p>

  <p>
    <b>Author email</b><br />
    <%= f.text_field :author_email %>
  </p>

  <p>
    <b>Body</b><br />
    <%= f.text_area :body_raw %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', post_comments_path(@post) %>
