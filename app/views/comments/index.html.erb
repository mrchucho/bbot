<h1>Listing comments</h1>

<table>
  <tr>
    <th>Post</th>
    <th>Author</th>
    <th>Author email</th>
    <th>Moderated</th>
    <th>Body</th>
    <th>&nbsp;</th>
  </tr>

<% for comment in @comments %>
  <tr>
    <td><%=h comment.post.title %></td>
    <td><%=h comment.author %></td>
    <td><%=h comment.author_email %></td>
    <td><%=h comment.moderated %></td>
    <td><%=  comment.body %></td>
    <td><%= link_to 'Show', post_comment_path(@post,comment) %>
    <%= link_to 'Edit', edit_post_comment_path(@post,comment) %>
    <%= link_to 'Moderate', moderate_post_comment_path(@post,comment),:method => :put %>
    <%= link_to 'Destroy', post_comment_path(@post,comment), :confirm => 'Are you sure?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New comment', new_post_comment_path(@post) %>
