<h1>Editing post</h1>

<%= error_messages_for :post %>

<% form_for(@post) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Category</b><br />
    <%= f.text_field :category %>
  </p>
  <p>
    <b>Body</b><br />
    <%= f.text_area :body_raw %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @post %> |
<%= link_to 'Back', posts_path %>
